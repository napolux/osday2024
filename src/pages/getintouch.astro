---
import SlideLayout from "../layouts/SlideLayout.astro";
import Title from "../components/astro/Title.astro";
import Left from "../components/astro/Left.astro";
import Right from "../components/astro/Right.astro";
import List from "../components/astro/List.astro";
import SlideLeftRight from "../components/astro/SlideLeftRight.astro";
import Content from "../components/astro/Content.astro";
import { KeyboardManager } from "../components/react/KeyboardManager";

const title = "Get in touch!!!";
---

<SlideLayout pageTitle={title}>
  <SlideLeftRight>
    <Title>{title}</Title>
    <Content>
      <Left proportions="w-2/3">
        <List>
          <li>
            <a href="https://napo.dev">https://napo.dev</a>
          </li>
          <li>
            <a href="https://github.com/napolux">https://github.com/napolux</a> (slides
            are there too...)
          </li>
          <li>
            <a href="https://linktr.ee/napo.dev">https://linktr.ee/napo.dev</a>
          </li>
        </List>
      </Left>
      <Right proportions="w-1/3">
        <img src="/images/qr.png" alt="qrcode for getting in touch" />
      </Right>
    </Content>
  </SlideLeftRight>
  <KeyboardManager prev="/whatcanido" next="/" client:only />
</SlideLayout>

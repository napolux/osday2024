---
import SlideLayout from "../../layouts/SlideLayout.astro";
import Title from "../../components/astro/Title.astro";
import Left from "../../components/astro/Left.astro";
import Right from "../../components/astro/Right.astro";
import List from "../../components/astro/List.astro";
import Code from "../../components/astro/Code.astro";
import SlideLeftRight from "../../components/astro/SlideLeftRight.astro";
import Content from "../../components/astro/Content.astro";
import { KeyboardManager } from "../../components/react/KeyboardManager";

const title = "Secret #1: stay healthy";
---

<!-- prettier-ignore -->
<SlideLayout pageTitle={title}>
  <SlideLeftRight>
    <Title>{title}</Title>
    <Content>
      <Left proportions="w-1/2">
        <List>
          <li>
            Take care of yourself
          </li>
          <li>
            Join a gym, get a 🐱 (or a 🐶), buy a PS5, try therapy/coaching, whatever makes you feel good
          </li>
          <li>"work/life balance" should become your fav. mantra</li>
          <li>P.s. I'm a developer, not a doctor</li>
          <li>P.s. I know, it's hard</li>
        </List>
      </Left>
      <Right proportions="w-1/2">
            <Code size="text-3xl">
              const whatToCheck = &lcub; 
  inside: [🧠, 👀, 🦴], 
  outside: [🍽, 🍺, 🚬, 💊],
&rcub;
            </Code>
      </Right>
    </Content>
  </SlideLeftRight>
<KeyboardManager prev="/secrets" next="/secrets/dog" client:only />
</SlideLayout>

---
const { prev, next } = Astro.props;
---

<script define:vars={{ prev, next }}>
  document.addEventListener("keydown", (event) => {
    switch (event.key) {
      case "ArrowLeft":
        window.location.href = prev;
        break;
      case "ArrowRight":
        window.location.href = next;
        break;
    }
  });
</script>
